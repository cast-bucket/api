{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@models/": ["src/models/index.ts"],
      "@models/*": ["src/models/*"],
      "@helpers/*": ["src/helpers/*"],
      "@credentials": ["src/credentials"]
    },
    // "allowJs": true,
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "src/**/*.json", "src/*.ts", "*.ts", "src/**/*"]
}
