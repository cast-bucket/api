{
  "name": "api",
  "version": "0.0.1",
  "description": "Backend api for cast-bucket.com",
  "author": "Shriram Balaji",
  "license": "MIT",
  "scripts": {
    "start": "cross-env node lib/index.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "watch-ts": "tsc -w",
    "build-ts": "tsc -b",
    "build": "rimraf lib && npm run build-ts && npm run lint",
    "serve-debug": "nodemon --inspect lib/index.js",
    "debug": "concurrently -k npm:watch-ts npm:serve-debug",
    "prettier": "prettier --write \"{,!(node_modules|lib|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "pre-commit": "yarn tslint:fix && yarn prettier && yarn build && yarn test"
  },
  "dependencies": {
    "encodeurl": "^1.0.2",
    "fastify": "^1.14.1",
    "firebase-admin": "^7.0.0",
    "http-errors": "^1.7.1",
    "rss-parser": "^3.6.2",
    "ts-node": "^8.0.2"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.0",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^24.0.5",
    "@types/node": "^10.12.23",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cast-bucket/api.git"
  },
  "bugs": {
    "url": "https://github.com/cast-bucket/api/issues"
  },
  "homepage": "https://github.com/cast-bucket/api#readme"
}
