{
  "name": "api",
  "version": "0.0.1",
  "description": "Backend api for cast-bucket.com",
  "author": "Shriram Balaji",
  "license": "MIT",
  "scripts": {
    "start": "cross-env node lib/index.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "watch-ts": "tsc -w",
    "build-ts": "tsc -b",
    "build": "rimraf lib && npm run build-ts",
    "serve-debug": "nodemon --inspect lib/index.js",
    "debug": "concurrently -k npm:watch-ts npm:serve-debug",
    "prettier": "prettier --write \"{,!(node_modules|lib|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "precommit": "npm run lint:fix && npm run prettier && npm run build",
    "prepush": "npm run test",
    "test": "jest --coverage",
    "spec": "jest -c jest.config.integration.js",
    "test:all": "npm run test && npm run spec",
    "deploy": "npm run build && now"
  },
  "dependencies": {
    "atob": "^2.1.2",
    "axios": "^0.19.0",
    "encodeurl": "^1.0.2",
    "fast-memoize": "^2.5.1",
    "fastify": "^1.14.1",
    "fastify-cors": "^1.0.0",
    "fastify-plugin": "^1.5.0",
    "firebase-admin": "^7.0.0",
    "http-errors": "^1.7.3",
    "is-base64": "^0.1.0",
    "param-case": "^2.1.1",
    "rss-parser": "^3.6.2"
  },
  "devDependencies": {
    "@types/atob": "^2.1.1",
    "@types/dotenv": "^6.1.0",
    "@types/http-errors": "^1.6.1",
    "@types/jest": "^24.0.5",
    "@types/node": "^12.7.8",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.2.0",
    "husky": "^1.3.1",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.0.2",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cast-bucket/api.git"
  },
  "bugs": {
    "url": "https://github.com/cast-bucket/api/issues"
  },
  "homepage": "https://github.com/cast-bucket/api#readme"
}
