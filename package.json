{
  "name": "api",
  "version": "0.0.1",
  "description": "Backend api for cast-bucket.com",
  "author": "Shriram Balaji",
  "license": "MIT",
  "scripts": {
    "start": "cross-env node lib/index.js",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -p tsconfig.json --fix",
    "watch-ts": "tsc -w",
    "build-ts": "tsc -b",
    "build": "rimraf lib && npm run build-ts",
    "dev": "concurrently -k npm:watch-ts nodemon --inspect lib/index.js",
    "prettier": "prettier --write \"{,!(node_modules|lib|build|coverage)/**/}*.{js,jsx,ts,tsx,json}\"",
    "precommit": "npm run lint:fix && npm run prettier",
    "prepush": "npm run test",
    "test": "jest --coverage",
    "spec": "jest -c jest.config.integration.js",
    "test:all": "npm run test && npm run spec",
    "deploy": "npm run build && now"
  },
  "dependencies": {
    "atob": "^2.1.2",
    "axios": "^0.19.0",
    "encodeurl": "^1.0.2",
    "fast-memoize": "^2.5.1",
    "fastify": "^2.10.0",
    "fastify-cors": "^3.0.0",
    "fastify-plugin": "^1.5.0",
    "firebase-admin": "^8.8.0",
    "http-errors": "^1.7.3",
    "is-base64": "^1.0.0",
    "module-alias": "^2.2.2",
    "param-case": "^2.1.1",
    "rss-parser": "^3.7.3"
  },
  "devDependencies": {
    "@types/atob": "^2.1.1",
    "@types/dotenv": "^8.2.0",
    "@types/http-errors": "^1.6.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "concurrently": "^5.0.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.6.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cast-bucket/api.git"
  },
  "bugs": {
    "url": "https://github.com/cast-bucket/api/issues"
  },
  "_moduleAliases": {
    "@models": "lib/models"
  },
  "homepage": "https://github.com/cast-bucket/api#readme"
}
